@using WatchfulEye.ViewModels
@model NewLoginViewModel

@{
    ViewData["Title"] = "Sign up";
}

<div class="WE_Section">

    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span>@Html.Raw(TempData["Error"])</span>

        </div>
    }

    <div class="">
        <div class="">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Username" class=""></label>
                    <input asp-for="Username" class="" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmailAddress" class=""></label>
                    <input asp-for="EmailAddress" class="" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class=""></label>
                    <input asp-for="Password" class="" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class=""></label>
                    <input asp-for="ConfirmPassword" class="" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="btn btn-outline-success float-right" type="submit" value="Sign up" />
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>