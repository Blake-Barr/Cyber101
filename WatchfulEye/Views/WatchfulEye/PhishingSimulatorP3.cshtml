@model IEnumerable<WatchfulEye.Models.EmailTemplate>
@{
    ViewData["Title"] = "PhishingSimulator";
}

<h1>Phishing</h1>

<div id="WE_PhishingInformation" class="WE_Section WE_BruteForce">
    <p>
        Below is an interactive phishing email generator, which will let you send a fake email to the specified account.
    </p>
</div>

<div id="WE_PhishingSimulator" class="WE_Section">

    <form asp-action="SendEmail">
        <div class="form-group">
            <label for="emailAddress">Email Address</label>
            <input type="text" name="emailAddress" id="emailAddress" />
        </div>

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" />
        </div>

        <label for="template">Email Template</label>
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <input type="radio" value="@item.ID" name="template" id="template" />
                    @Html.DisplayFor(modelItem => item.name)
                </li>
            }
        </ul>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>
