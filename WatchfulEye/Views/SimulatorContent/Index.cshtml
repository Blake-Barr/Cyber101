@model IEnumerable<WatchfulEye.Models.Simulator.SimulatorLevelContent>

@{
    ViewData["Title"] = "Email Templates";
}

<h1>Email Template List</h1>
<div class="WE_Section">


    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HTMLContent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GameType)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HTMLContent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameType)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
